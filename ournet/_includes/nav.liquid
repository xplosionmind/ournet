<aside>
	<input type='checkbox' id='navToggle'>
	<nav id='mainNav' aria-label='Main'>
		{% for page in nav %}
			<a href='{{ page.url }}' title='{{ page.title }}'>{{ page.name }}</a>
		{% endfor %}
	</nav>

	{% if alternates != empty %}
		<input type='checkbox' id='altLangListToggle'>
		<div id='altLangList'>
			{% for alternate in alternates %}
				<a href='{{ alternate.url }}' hreflang='{{ alternate.data.lang }}' title='View this page in {{ alternate.data.lang | upcase }}'>
					{% case alternate.data.lang %}
					{% when 'en' %}
						🇬🇧
					{% when 'it' %}
						🇮🇹
					{% when 'fr' %}
						🇫🇷
					{% when 'de' %}
						🇩🇪
					{% when 'el' %}
						🇬🇷
					{% when 'tr' %}
						🇹🇷
					{% else %}
						{{ alternate.data.lang }}
					{% endcase %}
				</a>
			{% endfor %}
		</div>
		<label id='altLangListToggleBtn' for='altLangListToggle' aria-label='toggle-language-menu' lang='en'>🌐<span> Change language</span></label>
	{% endif %}
	<label id='navToggleBtn' for='navToggle' aria-label='toggle-navigation'>🍔</label>
</aside>
