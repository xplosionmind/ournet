<header>
	<input type='checkbox' id='navToggle'>
	<nav id='mainNav' aria-label='Main'>
		{% for page in nav %}
			<a href='{{ page.url[lang] }}' title='{{ page.title[lang] }}'>{{ page.name[lang] }}</a>
		{% endfor %}
	</nav>

	{% if reference_page %}
		<input type='checkbox' id='altLangListToggle'>
		<div id='altLangList'>
			{% for alternate in alternates %}
				<a href='{{ alternate.url }}' hreflang='{{ alternate.data.lang }}'>
					{% if alternate.data.lang == 'en' %}
						🇬🇧
					{% elsif alternate.data.lang == 'it' %}
						🇮🇹
					{% else %}
						{{ alternate.data.lang }}
					{% endif %}
				</a>
			{% endfor %}
		</div>
		<label id='altLangListToggleBtn' for='altLangListToggle' aria-label='toggle-language-menu'>🌐</label>
	{% endif %}
	<label id='navToggleBtn' for='navToggle' aria-label='toggle-navigation'>🍔</label>
</header>
